<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="cz.smartfine.networklayer.model.MobileDeviceDB" table="mobiledevices">
        <id name="id" type="integer">
            <column name="ID" />
            <generator class="identity"/>
        </id>
  
        <property name="imei" type="string">
            <column length="15" name="IMEI" not-null="true"/>
        </property>
  
        <property name="name" type="string">
            <column length="20" name="NAME" not-null="true"/>
        </property>
  
        <property name="description" type="string">
            <column length="255" name="DESCRIPTION" not-null="true" default=""/>
        </property>
        
        <property name="office" type="integer">
            <column name="OFFICE" not-null="true"/>
        </property>
        
        <set name="associations" table="associations" inverse="false">
            <key column="DEVICE" />
            <many-to-many class="cz.smartfine.networklayer.model.PolicemanDB" column="POLICEMAN" />
        </set>
        
    </class>
</hibernate-mapping>

<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowTitleSize">32dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowBackground">@color/activity_background_color</item>
        <item name="android:listViewStyle">@style/CustomlistViewStyle</item>
    </style>
    
    <style name="CustomTheme.NoTitleBar" parent="CustomTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@color/title_background_color</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="CustomlistViewStyle">
        <item name="android:background">@color/list_background_color</item>
    </style>

</resources>